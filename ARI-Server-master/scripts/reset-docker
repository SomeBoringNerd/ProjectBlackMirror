# ce script supprime TOUT LES CONTAINERS, TOUTES LES IMAGES ET TOUT LES CACHES DE DOCKER 
# NE PAS EXECUTER SAUF SI VOUS ÊTES SUR DE VOULOIR FAIRE ÇA
echo CE SCRIPT VA SUPPRIMER TOUTES LES IMAGES DOCKER ET LES CONTAINERS
echo POUR EXECUTER ÇA ÉCRIVEZ \"je comprend que ce script va tout supprimer et que je ne dois pas l\'executer n\'importe comment\"
read deploy_type

if [ "$EUID" -ne 0 ]
  then echo "ce script doit être executé en tant que root"
  exit
fi
echo ""
echo ""
if [ "$deploy_type" = "je comprend que ce script va tout supprimer et que je ne dois pas l'executer n'importe comment" ] ; then
    docker rm -f $(docker ps -a -q)
    docker image prune -a -f
fi
echo ""
echo ""
echo tout les containers et images ont été supprimées.