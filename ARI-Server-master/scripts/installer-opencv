if [ "$EUID" -ne 0 ]
  then echo "Ce script doit être executé en tant que root"
  exit
fi


apt update
apt install -y cmake g++ wget unzip
wget -O opencv.zip https://github.com/opencv/opencv/archive/4.x.zip
unzip opencv.zip
mkdir -p build
cd build
cmake  ../opencv-4.x
cmake --build .

echo "fini !"

